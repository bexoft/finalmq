//////////////////////////////
// Enums
//////////////////////////////

<% for (var i = 0; i < data.enums.length; i++) {
    var en = data.enums[i]
    var plainTypeName = helper.getPlainTypeName(en.typeName) %>
class <%- plainTypeName %>
{
public:
    enum Enum : std::int32_t {<% -%>
        <% for (var i = 0; i < en.entries.length; i++) { 
            var entry = en.entries[i] %>
        <%- entry.name %> = <%- entry.id %>,<% -%>
        <% } %>
    };

    <%- plainTypeName %>();
    <%- plainTypeName %>(Enum en);
    operator const Enum&() const;
    operator Enum&();
    const <%- plainTypeName %>& operator =(Enum en);
    const std::string& toString() const;
    void fromString(const std::string& name);

private:
    Enum m_value = TYPE_NONE;
    static const EnumInfo _enumInfo;
};
<% } %>



//////////////////////////////
// Structs
//////////////////////////////

<% for (var i = 0; i < data.structs.length; i++)
{
    var stru = data.structs[i]
    var plainTypeName = helper.getPlainTypeName(stru.typeName) %>
class <%- plainTypeName %> : public StructBase
{<% -%>
<% for (var n = 0; n < stru.fields.length; n++) { 
        field = stru.fields[n] %>
    <%- helper.typeId2type(data, field.typeId, field.typeName) %> <%- field.name %><% if (helper.typeId2default(field.typeId)){%> = <%- helper.typeId2default(field.typeId)%><% } %>;<% -%>
<% } %>

    <%- plainTypeName %>();
    <%- plainTypeName %>(<% -%>
<% for (var n = 0; n < stru.fields.length; n++) { 
        field = stru.fields[n] %><% -%>
const <%- helper.typeId2type(data, field.typeId, field.typeName) %>& <%- field.name %>_<% if (n < stru.fields.length-1){ %>, <% } %><% -%>
<% } %>);
    bool operator ==(const TestBool& rhs) const;
    bool operator !=(const TestBool& rhs) const;

private:
    virtual void clear() override;
    virtual const StructInfo& getStructInfo() const override;
    static const StructInfo _structInfo;
};
<% } %>

<%
if (data.namespace)
{
if (data.namespace.length > 0)
{
for (var i = 0; i < namespaces.length; i++) { 
var ns = namespaces[namespaces.length - 1 - i] %>
} // close namespace <%- ns %> <% -%>
<% }}} %>    


