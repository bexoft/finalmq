{
public:
    enum Enum : std::int32_t {<% -%>
        <% for (var n = 0; n < en.entries.length; n++) { 
            var entry = en.entries[n] %>
        <%- entry.name %> = <%- entry.id %>,<% -%>
        <% } %>
    };

    <%- plaintype %>();
    <%- plaintype %>(Enum en);
    operator const Enum&() const;
    operator Enum&();
    const <%- plaintype %>& operator =(Enum en);
